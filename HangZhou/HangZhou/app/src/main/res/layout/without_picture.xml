<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/head_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/boy1"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小鸽子"
            android:textSize="15sp"
            android:layout_toRightOf="@id/head_portrait"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:20 pm"
            android:textSize="12sp"
            android:layout_below="@id/name"
            android:layout_alignLeft="@id/name"
            />

        <Button
            android:id="@+id/folder"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/folder_small" />

    </RelativeLayout>

    <TextView
        android:id="@+id/content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/identity"
        android:text="Hello World"
        android:textSize="20sp"
        android:paddingLeft="20dp"/>

    <RelativeLayout
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-2dp">

        <TextView
            android:id="@+id/number_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:text="14"
            android:textSize="17sp" />

        <Button
            android:id="@+id/comment1"
            android:layout_width="35dp"
            android:layout_height="27dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/number_comment"
            android:background="@drawable/comment"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/number_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/comment1"
            android:text="13"
            android:textSize="17sp"
            android:layout_marginRight="18dp"/>

        <Button
            android:id="@+id/like"
            android:layout_width="35dp"
            android:layout_height="27dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/number_like"
            android:background="@drawable/like" />

    </RelativeLayout>

</RelativeLayout>